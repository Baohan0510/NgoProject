@model NgoProject.Models.News

@{
    ViewData["Title"] = "AddNews";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>AddNews</h2>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="AddNews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsName" class="control-label">NewsName</label>
                <input asp-for="NewsName" class="form-control" />
                <span asp-validation-for="NewsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage1" class="control-label">NewsImage1</label>
                <input asp-for="NewsImage1" class="form-control" />
                <span asp-validation-for="NewsImage1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage2" class="control-label">NewsImage2</label>
                <input asp-for="NewsImage2" class="form-control" />
                <span asp-validation-for="NewsImage2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage3" class="control-label">NewsImage3</label>
                <input asp-for="NewsImage3" class="form-control" />
                <span asp-validation-for="NewsImage3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsContent" class="control-label">NewsContent</label>
                <input asp-for="NewsContent" class="form-control" />
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDescription" class="control-label">NewsDescription</label>
                <input asp-for="NewsDescription" class="form-control" />
                <span asp-validation-for="NewsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OurpartnerId" class="control-label"></label>
                <select asp-for="OurpartnerId" class ="form-control" asp-items="ViewBag.OurpartnerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

