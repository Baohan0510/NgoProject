@model NgoProject.ViewModel.ViewModelBanner
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "BannerEdit2";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banner</h4>
            <p class="card-description">
                Don't leave the background blank
            </p>

            <form class="forms-sample" asp-action="BannerEdit2" method="post" enctype="multipart/form-data">

                <div class="form-group" hidden>
                    <label for="exampleInputName1" asp-for="Id">ID</label>
                    <input type="text" class="form-control" asp-for="Id">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Content">Content</label>
                    <input type="text" style="width:100% ;height:100px" class="form-control" asp-for="Content" name="Content" required>
                </div>

                <div class="form-group">
                    <label asp-for="Image">Upload File</label>
                    <input type="file" asp-for="Image" name="Image" class="file-upload-default" required>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button class="btn btn-light"><a asp-action="Banner" style="text-decoration:none">Back To List</a></button>
                </div>
            </form>

        </div>
    </div>
</div>